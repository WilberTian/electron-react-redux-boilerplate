{
  "name": "electron-react-redux-starter",
  "version": "0.1.0",
  "description": "Simple boilerplate of electron-react-redux",
  "main": "main.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "cross-env NODE_ENV=production webpack --config webpack.config.prod.js --progress --color",
    "prod": "npm run clean && npm run build && cross-env NODE_ENV=production electron main.js",
    
    "dev": "cross-env NODE_ENV=development electron main.js",
    "dev-hot": "node server.js"
  },
  "devDependencies": {
    "babel-core": "^6.7.6",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-react-hmre": "^1.1.1",
    "cross-env": "^3.0.0",
    "css-loader": "^0.23.1",
    "electron-prebuilt": "^0.37.0",
    "express": "^4.13.4",
    "node-sass": "^3.4.2",
    "react": "^15.0.1",
    "react-dom": "^15.0.1",
    "react-redux": "^4.4.5",
    "redux": "^3.6.0",
    "redux-devtools": "^3.3.1",
    "redux-devtools-dock-monitor": "^1.1.1",
    "redux-devtools-log-monitor": "^1.0.11",
    "redux-logger": "^2.6.1",
    "redux-thunk": "^2.1.0",
    "sass-loader": "^3.2.0",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.2",
    "webpack-dev-middleware": "^1.4.0",
    "webpack-hot-middleware": "^2.6.0"
  }
}
